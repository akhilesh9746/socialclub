<form name="theform" id="theform" method="GET" >
    <input type="hidden" name="form-name" id="form-name" value="1" />

<config
    hidden="1"
    id="config"
    sanity-check="form-name"
    form-id="theform">
    <element
        name="email"
        element-id="email" />
    <element
        name="name"
        element-id="name" />
    {HIDDEN:}
    <element
        name="view_inactive"
        element-id="view_inactive" />
    <element
        name="view_private"
        element-id="view_private" />
    {:HIDDEN}
</config>

<fieldset>
<legend>Filtering Options</legend>

Filter By: <input type="text" name="name" id="name"
    value="[name]"
    onFocus="if(this.value == '[name]') this.value = '';"
    onBlur="if(this.value == '') this.value = '[name]';"/>
<input type="text" name="email" id="email"
    value="[email]"
    onFocus="if(this.value == '[email]') this.value = '';"
    onBlur="if(this.value == '') this.value = '[email]';"/>
<input type="submit" value="Go"/>

{HIDDEN:}
<br />
View members who are
<input type="checkbox" name="view_private" id="view_private" value="1" />
<label for="view_private">Private</label>
<input type="checkbox" name="view_inactive" id="view_inactive" value="1" />
<label for="view_inactive">Inactive</label>
{:HIDDEN}

</fieldset>

</form>
